<?xml version="1.0"?>
<component-set>
	<components>
		<component>
			<role>org.apache.maven.lifecycle.mapping.LifecycleMapping</role>
			<role-hint>orphedomos</role-hint>
			<implementation>
				org.apache.maven.lifecycle.mapping.DefaultLifecycleMapping
			</implementation>
		</component>
		<component>
			<role>org.apache.maven.lifecycle.Lifecycle</role>
			<implementation>org.apache.maven.lifecycle.Lifecycle</implementation>
			<role-hint>orphedomos</role-hint>
			<configuration>
				<id>default</id>
				<phases>
					<phase>validate</phase>
					<phase>package</phase>
					<phase>install</phase>
					<phase>deploy</phase>
				</phases>
				<default-phases>
					<validate>
						org.technologybrewery.orphedomos:orphedomos-maven-plugin:verify-docker-environment
					</validate>
					<package>
						org.technologybrewery.orphedomos:orphedomos-maven-plugin:build-docker-image
					</package>
					<install>
						org.apache.maven.plugins:maven-install-plugin:install
					</install>
					<deploy>
						org.apache.maven.plugins:maven-deploy-plugin:deploy,
						org.technologybrewery.orphedomos:orphedomos-maven-plugin:push-docker-image
					</deploy>
				</default-phases>
			</configuration>
		</component>
		<component>
			<role>org.apache.maven.artifact.handler.ArtifactHandler</role>
			<role-hint>orphedomos</role-hint>
			<implementation>
				org.apache.maven.artifact.handler.DefaultArtifactHandler
			</implementation>
			<configuration>
				<type>docker</type>
				<extension>orphedomos.placeholder.txt</extension>
				<packaging>orphedomos</packaging>
				<language>dockerfile</language>
				<addedToClasspath>false</addedToClasspath>
			</configuration>
		</component>
	</components>
</component-set>
